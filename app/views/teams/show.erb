<h1><%= @team.name %></h1>
<p>Platform: <%= @team.platform %> </p>

<ol>
    <% @team.players.each do |player| %>
        <li><%= player.gamertag %></li>
        <% end %>
   
</ol>

<form action="/teams/<%= @team.id %>/players" method="POST">
    <input type="text" name="gamertag" value ="Enter player gamertag"/>
    <input type="submit" value="Add Player">




</form>


<form method="post" action="/teams/<%=@team.id%>/delete">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete Team">
</form>

<a href="/teams/<%=@team.id%>/edit">Edit Team </a>